<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/item_option_menu"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/muli"
            android:letterSpacing="0.05"
            android:padding="8dp"
            android:textSize="18sp"
            tools:text="Task Title" />

        <ImageView
            android:id="@+id/item_option_menu"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="4dp"
            android:layout_marginVertical="8dp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:src="@drawable/noun_47033_cc" />

        <ImageView
            android:id="@+id/item_default_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_option_menu"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="6dp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:src="@drawable/ic_filled_check"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="4dp"
        android:layout_marginVertical="4dp"
        android:background="@android:color/darker_gray" />

</LinearLayout>